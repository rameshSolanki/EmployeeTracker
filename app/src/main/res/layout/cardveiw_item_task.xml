<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Register">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:clickable="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="3dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/emp_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_cloud_upload_black_24dp" />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/cv_checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#efefef"
                android:padding="10dp"
                android:text="Check In :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cv_taskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="12, Service Rd, MCCH Society, anvel,anvel,Panvel, Navi Mumbai, Maharashtra 410206, India"
                android:textColor="#c5000000" />

            <TextView
                android:id="@+id/cv_taskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Date"
                android:textColor="#c5000000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_below="@+id/lin"
                android:layout_marginTop="5dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/cv_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#efefef"
                android:padding="10dp"
                android:text="Check out :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cv_taskName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_name"
                android:textColor="#c5000000" />

            <TextView
                android:id="@+id/cv_taskDescription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/app_name"
                android:textColor="#c5000000" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="120dp"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_weight="3">


                <ImageButton
                    android:id="@+id/bt_edit"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_edit_black_24dp" />

                <View
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#eee" />

                <ImageButton
                    android:id="@+id/bt_delete"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_delete_black_24dp" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/cv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/cv_taskId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>